<%= form_for @user do |f| %>
<%= f.label :username, "Your user name here" %><br>
  <%= f.text_field :username %><br>
<%= f.label :email %><br>
  <%= f.email_field :email, placeholder: "example@example.com" %><br>
<%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.submit %>
  <% end %>

<% @user.errors.each do |key, message| %> <p> <%= "#{key.capitalize}: #{message}" %> </p> <% end %> 